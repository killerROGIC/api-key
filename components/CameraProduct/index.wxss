.camera-layout {
    background-color: #000;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    left: 0;
    min-height: 100vh;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000001
}

.camera-layout>wx-view {
    width: 100%
}

.camera-layout .camera {
    position: relative;
    width: 750rpx
}

.camera-layout .camera .product-picture {
    height: 188rpx;
    position: absolute;
    right: 0;
    top: 0;
    width: 188rpx
}

.camera-layout .page-tips {
    background-color: #434343;
    color: #e5e5e5;
    font-size: 22rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    width: 100%
}

.camera-layout .operation {
    padding-top: 24rpx
}

.camera-layout .operation .scroll {
    height: 136rpx;
    white-space: nowrap
}

.camera-layout .operation .scroll .products {
    display: inline-block;
    padding-left: 24rpx
}

.camera-layout .operation .scroll .products .item {
    background: #424242;
    border: 1px solid #5e5e5e;
    border-radius: 8rpx;
    box-sizing: border-box;
    height: 136rpx;
    margin-right: 16rpx;
    opacity: 1;
    overflow: hidden;
    width: 140rpx
}

.camera-layout .operation .scroll .products .item .icon {
    height: 88rpx;
    width: 88rpx
}

.camera-layout .operation .scroll .products .item .picture {
    height: 136rpx;
    width: 140rpx
}

.camera-layout .operation .scroll .products .selected {
    border: 2px solid #f01732
}

.camera-layout .bottom,.camera-layout .bottom2 {
    box-sizing: border-box;
    -webkit-flex: 1;
    flex: 1;
    padding: 0 120rpx;
    width: 100%
}

.camera-layout .bottom .btn .img {
    height: 64rpx;
    width: 64rpx
}

.camera-layout .bottom .circle {
    border: 3px solid #fff;
    border-radius: 50%;
    box-sizing: border-box;
    height: 120rpx;
    width: 120rpx
}

.camera-layout .bottom .circle .center {
    background-color: #fff;
    border-radius: 50%;
    height: 92rpx;
    width: 92rpx
}

.camera-layout .bottom2 {
    padding: 0 154rpx
}

.camera-layout .bottom2 .btn .img {
    height: 158rpx;
    width: 120rpx
}
